{
  "name": "@nexxar/vue3-ts-class-compatibility",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.12.0",
  "license": "MIT",
  "author": "nr@firecoder.com",
  "scripts": {
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vue-tsc --noEmit && vite build",
    "build:types": "tsc src/index.ts --moduleResolution node  --target esnext --declaration --emitDeclarationOnly --outDir dist",
    "commitlint": "commitlint --edit",
    "create:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "dev": "vite",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "npm run test:unit",
    "test:unit": "vitest run --environment jsdom",
    "test:unit:watch": "vitest watch --environment jsdom",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5051/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5051/ 'cypress run'",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "configure:git": "git config --local core.hooksPath .githooks",
    "preview": "vite preview --port 5051",
    "version": "npm run create:changelog"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@babel/types": "^7.20.5",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@firecoder-com/vite-plugin-vue-oop": "^1.0.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.13",
    "@types/sinon": "^10.0.13",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.2.6",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^12.0.2",
    "eslint": "^8.29.0",
    "eslint-plugin-cypress": "^2.12.1",
    "jsdom": "^20.0.3",
    "sinon": "^15.0.0",
    "start-server-and-test": "^1.15.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.7",
    "vue-tsc": "^1.0.13"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "@nexxar:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexxar/vue3-ts-class-compatibility"
  }
}
