{
  "name": "vue3-typescript-compatibility",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "version": "0.9.0",
  "license": "MIT",
  "author": "nr@firecoder.com",
  "scripts": {
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vue-tsc --noEmit && vite build",
    "build:types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist",
    "commitlint": "commitlint --edit",
    "create:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "dev": "vite",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test": "npm run test:unit",
    "test:unit": "vitest run --environment jsdom",
    "test:unit:watch": "vitest watch --environment jsdom",
    "test:e2e": "start-server-and-test preview http://127.0.0.1:5051/ 'cypress open'",
    "test:e2e:ci": "start-server-and-test preview http://127.0.0.1:5051/ 'cypress run'",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "preinstall": "git config --local core.hooksPath .githooks",
    "preview": "vite preview --port 5051",
    "version": "npm run create:changelog"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.43",
    "@types/sinon": "^10.0.11",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.1",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^10.1.0",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "jsdom": "^19.0.0",
    "sinon": "^14.0.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vitest": "^0.15.0",
    "vue-tsc": "^0.37.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nros/vue3-typescript-compatibility"
  }
}
